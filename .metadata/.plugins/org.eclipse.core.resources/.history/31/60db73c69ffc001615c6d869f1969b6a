public class Descriptor {
	
	private int exloredData[][];
	private int obstacleData[][];
	
	private String fileName = "MDFStrings_week4.txt";
	
	//TODO:
	public void writeDescriptorFromFile(String exploredData, String obstacleData){
		try{
